@model Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="card-header card-header-primary text-center">
            <h4 class="card-title">Contact</h4>
        </div>
        <div class="section section-contacts">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h4 class="text-center description">채용에 관심이 있으신 분은 여기로 연락 바랍니다.</h4>
                    <form class="contact-form" asp-action="Index">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating" asp-for="Name">성함</label>
                                    <input type="text" class="form-control" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating" asp-for="Email">이메일</label>
                                    <input type="email" class="form-control" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleMessage" class="bmd-label-floating" asp-for="Contents">내용</label>
                            <textarea type="text" class="form-control" rows="4" id="exampleMessage" asp-for="Contents"></textarea>
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-4 ml-auto mr-auto text-center">
                                <button type="submit" class="btn btn-primary btn-raised">
                                    전송
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                @if (ViewBag.Message != null)
                                {
                                    <span>@ViewBag.Message</span>
                                }
                            </div>
                        </div>
                        <div class="text-center">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="team-player">
                                        <div class="card card-plain">
                                            <div class="col-md-6 ml-auto mr-auto">
                                                <img src="~/assets/img/naver.png" alt="Thumbnail Image" class="img-fluid">
                                                <a href="https://blog.naver.com/noworry1" target="_blank" class="btn btn-link" style="padding:0; margin:0;">Naver</a>
                                            </div>
                                            <h4 class="card-title">
                                                Naver Blog
                                                <br>
                                                <small class="card-description text-muted">noworry1@naver.com</small>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="team-player">
                                        <div class="card card-plain">
                                            <div class="col-md-6 ml-auto mr-auto">
                                                <img src="~/assets/img/instagram.png" alt="Thumbnail Image" class="img-fluid">
                                                <a href="https://www.instagram.com/duunhun/" target="_blank" class="btn btn-link" style="padding:0; margin:0;">Instagram</a>
                                            </div>
                                            <h4 class="card-title">
                                                Instagram
                                                <br>
                                                <small class="card-description text-muted">duunhun</small>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="team-player">
                                        <div class="card card-plain">
                                            <div class="col-md-6 ml-auto mr-auto">
                                                <img src="~/assets/img/facebook.png" alt="Thumbnail Image" class="img-fluid">
                                                <a href="https://www.facebook.com/donghoon.kang.900/" target="_blank" class="btn btn-link" style="padding:0; margin:0;">Facebook</a>
                                            </div>
                                            <h4 class="card-title">
                                                Facebook
                                                <br>
                                                <small class="card-description text-muted">강동훈</small>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
